<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="de.mhus.hair.app.admin.intro.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="RCP Perspective"
            class="de.mhus.hair.app.admin.intro.Perspective"
            id="de.mhus.cap.core.perspective">
      </perspective>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="de.mhus.hair.app.admin.application"
            name="Hair3">
         <property
               name="windowImages"
               value="icons/mhu_hair_16.gif,icons/mhu_hair_32.gif">
         </property>
         <property
               name="appName"
               value="Hair3">
         </property>
         <property
               name="preferenceCustomization"
               value="plugin_customization.ini">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.intro">
      <intro
            class="org.eclipse.ui.intro.config.CustomizableIntroPart"
            id="de.mhus.hair.app.admin.intro">
      </intro>
      <introProductBinding
            introId="de.mhus.hair.app.admin.intro"
            productId="de.mhus.hair.app.admin.product">
      </introProductBinding>
   </extension>
   <extension
         point="org.eclipse.ui.intro.config">
      <config
            introId="de.mhus.hair.app.admin.intro"
            content="introContent.xml"
            id="de.mhus.hair.app.admin.configId">
         <presentation
               home-page-id="root">
            <implementation
                  kind="html"
                  os="win32,linux,macosx">
            </implementation>
         </presentation>
      </config>
   </extension>

   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               id="file"
               label="File">
            <dynamic
                  class="de.mhus.hair.app.admin.menu.FileContributionItem"
                  id="de.mhus.hair.app.admin.menu.file.dynamic">
            </dynamic>
         </menu>
         <menu
               id="extras"
               label="Extras">
            <dynamic
                  class="de.mhus.hair.app.admin.menu.ExtrasContributionItem"
                  id="de.mhus.hair.app.admin.menu.extras.dynamic">
            </dynamic>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar">
         <toolbar
               id="de.mhus.hair.admin.toolbar">
            <command
                  commandId="de.mhus.hair.app.admin.editable"
                  icon="icons/page_edit.png"
                  label="Editable"
                  style="toggle">
            </command>
            <command
                  commandId="de.mhus.hair.app.admin.undo"
                  icon="icons/arrow_undo.png"
                  label="Undo Editor"
                  style="push">
            </command>
            <command
                  commandId="de.mhus.cap.ui.add_connection"
                  icon="icons/database_add.png"
                  label="Add Connection"
                  style="pulldown"
                  tooltip="Add Connection">
            </command>
            <command
                  commandId="de.mhus.cap.ui.remove_connection"
                  icon="icons/database_delete.png"
                  label="Remove Connection"
                  style="push"
                  tooltip="Remove Connection">
            </command>
            <command
                  commandId="de.mhus.cap.ui.qeditor.open"
                  icon="icons/cog_add.png"
                  label="Open Query Editor"
                  style="pulldown">
            </command>
         </toolbar>
      </menuContribution>
      <menuContribution
            locationURI="menu:de.mhus.cap.ui.add_connection">
         <dynamic
               class="de.mhus.cap.ui.connections.AddContributionItem"
               id="de.mhus.hair.app.admin.add_connection.dynamic">
         </dynamic>
      </menuContribution>
      <menuContribution
            locationURI="menu:de.mhus.cap.ui.qeditor.open">
         <dynamic
               class="de.mhus.cap.ui.qeditor.QueryContributionItem"
               id="menu:de.mhus.cap.ui.qeditor.open.dynamic">
         </dynamic>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="de.mhus.hair.app.admin.caocommand"
            name="CaoCommand">
         <commandParameter
               id="de.mhus.hair.app.admin.caooperation"
               name="CaoOperation"
               optional="false">
         </commandParameter>
      </command>
      <command
            id="de.mhus.hair.app.admin.editable"
            name="Editable">
      </command>
      <command
            id="de.mhus.hair.app.admin.undo"
            name="Undo">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="de.mhus.hair.app.admin.menu.EditableHandler"
            commandId="de.mhus.hair.app.admin.editable">
      </handler>
      <handler
            class="de.mhus.hair.app.admin.menu.UndoHandler"
            commandId="de.mhus.hair.app.admin.undo">
      </handler>
   </extension>
   <extension
         point="de.mhus.cap.core.application">
      <application
            class="de.mhus.hair.app.admin.HairApplication"
            name="Hair 3">
      </application>
   </extension>

</plugin>
